<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data"</form>
    <div class="campo">
        <label>Nombre</label>
        <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Tu Nombre">
    </div> 
    <div class="campo">
        <label>Correo</label>
        <input value="{{usuario.email}}"  type="email" name="email" placeholder="Tu correo">
    </div>    
    <div class="campo">
        <label>Contraseña</label>
        <input type="password" name="password" placeholder="Tu Contraseña">
    </div>    
    <div class="campo">
            <label>Logo de la Empresa</label>
            <input type="file" name="imagen">
            <img src="/uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>
    <div class="campo">
        <input type="submit" class="btn btn-azul" value="Guardar Cambios">
    </div>
    </form>
</main>