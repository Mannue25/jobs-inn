
<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
    <h3>Información General</h3>
    <div class="campo">
        <label>Título</label>
        <input type="text" name="titulo" placeholder="Ej: Vendedor">
    </div>
    <div class="campo">
        <label>Empresa</label>
        <input type="text" name="empresa" placeholder="Nombre de Empresa">
    </div>
    <div class="campo">
        <label>Ubicación</label>
        <input type="text" name="ubicacion" placeholder="Ej: México">
    </div>
    <div class="campo">
        <label>Salario</label>
        <input type="text" name="salario" placeholder="Ej: $ 6,000">
    </div>
    <div class="campo">
        <label>Contrato</label>
        <select name="contrato">
            <option value=""disabled selected >-- Selecciona --</option>
            <option value="Tiempo Completo">Tiempo Completo</option>
            <option value="medio">Medio Tiempo</option>
            <option value="temporal">Temporal</option>
        </select>
    </div>
    <h3>Descripción del Puesto</h3>
    <div class="campo descripcion">
        <label>Descripción</label>
        <input type="hidden" id="x" name="descripcion">
        <trix-editor input="x"></trix-editor>
    </div>
    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
        {{#seleccionarHabilidades a}}
        {{/seleccionarHabilidades}}

    </ul>
    <div class="campo centrar-horizontal">
        <input type="hidden" name="habilidades" id="habilidades">
        <input type="submit" value="publicar" class="btn btn-azul">
    </div>
    </form>
</main>